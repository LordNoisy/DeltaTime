{
  "schemaVersion": 1,
  "id": "deltatime",
  "version": "${version}",

  "name": "Delta Time",
  "description": "This mod aims to separate certain functions from TPS, instead opting for them to use a delta time approach.",
  "authors": [
    "LordNoisy"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "GPLV3",
  "icon": "assets/deltatime/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.fabricmc.deltatime.DeltaTime"
    ]
  },
  "mixins": [
    "deltatime.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric-api": "*",
    "minecraft": "~1.19.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
